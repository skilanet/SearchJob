<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="h4_text_style">
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/h4_text_size</item>
        <item name="android:fontWeight">500</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="h3_text_style">
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/h3_text_size</item>
        <item name="android:fontWeight">500</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="h2_text_style">
        <item name="fontFamily">@font/ys_display_bold</item>
        <item name="android:textSize">@dimen/h2_text_size</item>
        <item name="android:fontWeight">700</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="p_text_style">
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/h4_text_size</item>
        <item name="android:fontWeight">400</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="BottomNavigationStyle" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="elevation">0dp</item>
        <item name="itemIconTint">@drawable/bottom_nav_item_color_selector</item>
        <item name="itemTextColor">@drawable/bottom_nav_item_color_selector</item>
        <item name="itemTextAppearanceInactive">@style/bottom_navigation_view_inactive_text_style</item>
        <item name="itemTextAppearanceActive">@style/bottom_navigation_view_active_text_style</item>
        <item name="itemActiveIndicatorStyle">@null</item>
        <item name="itemRippleColor">@null</item>
        <item name="iconSize">24dp</item>
        <item name="itemPaddingTop">8dp</item>
        <item name="itemPaddingBottom">8dp</item>
    </style>

    <style name="bottom_navigation_view_inactive_text_style">
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">12sp</item>
        <item name="lineHeight">16sp</item>
    </style>

    <style name="bottom_navigation_view_active_text_style" parent="bottom_navigation_view_inactive_text_style">
        <item name="android:textColor">@color/main_blue_E7</item>
    </style>

    <style name="shape_appearance">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>

    <style name="SearchEditTextStyle" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:background">@color/light_gray_EB</item>

    </style>


    <style name="salary_hint_text_appearance">
        <item name="android:textColor">@drawable/salary_hint_selector</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">12sp</item>
        <item name="lineHeight">16dp</item>
        <item name="android:fontWeight">400</item>

    </style>

    <style name="salary_placeholder">
        <item name="android:textColor">@color/gray_B4</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">19sp</item>
        <item name="lineHeight">16sp</item>
        <item name="android:fontWeight">400</item>

    </style>

    <style name="placeholder_text_appearance" parent="salary_placeholder">
        <item name="android:textColor">@color/gray_B4</item>

    </style>

</resources>
